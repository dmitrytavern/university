@model List<server_web_lab2.Models.Property>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-4">Список нерухомості</h2>

    <table class="table table-hover table-bordered shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Тип</th>
                <th>Район</th>
                <th>Площа (м²)</th>
                <th>Кімнат</th>
                <th>Ціна (₴)</th>
                <th>Операція</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Type</td>
                    <td>@p.District</td>
                    <td>@p.Area</td>
                    <td>@p.Rooms</td>
                    <td>@string.Format("{0:N0}", p.Price)</td>
                    <td><span class="badge bg-primary">@p.OperationType</span></td>
                </tr>
            }
        </tbody>
    </table>
</div>