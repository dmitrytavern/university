@model List<server_web_lab3.Models.Property>
@{
    ViewBag.Title = "Нерухомість";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-4">
    <h2 class="mb-3">Список нерухомості</h2>

    <form method="get" class="input-group mb-3 w-50">
        <input type="text" name="search" class="form-control" placeholder="Пошук за типом або станом..." />
        <button type="submit" class="btn btn-primary">Знайти</button>
    </form>

    <a href="@Url.Action("Create")" class="btn btn-success mb-3">+ Додати нову</a>

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Тип</th>
                <th>Кімнат</th>
                <th>Етажність</th>
                <th>Стан</th>
                <th>Вартість</th>
                <th>Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Type</td>
                    <td>@item.Rooms</td>
                    <td>@item.Floors</td>
                    <td>@item.Condition</td>
                    <td>@item.EstimatedValue.ToString("N0") ₴</td>
                    <td>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="btn btn-danger btn-sm">Видалити</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>